		</div>
	</div>
    </fieldset>
	}
}

<style type="text/css">
	span.k-link {
		padding: 6px !important;
	}
</style>

<!-- Confirm Model Dialog -->
<div id="deleteModal" class="modal fade" role="dialog">
	<div class="modal-dialog" style="vertical-align: middle;height: 100%;margin-top:250px">
		<!-- Modal content-->
		<div class="modal-content">
			<div class="modal-header" style="background-color:whitesmoke;padding:9px 15px;">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 id="deleteTitle" class="modal-title">Delete record?</h4>
			</div>
			<div class="modal-body">
				<p id="deleteMessage"></p>
			</div>
			<div class="modal-footer" style="background-color:whitesmoke;padding:9px 15px;">
				<a class="btn btn-default" id="YesDeleteBtn">Yes</a>
				<button type="button" class="btn btn-default" data-dismiss="modal">No</button>
			</div>
		</div>
	</div>
</div>

<!-- Script to Delete Record -->
<script type="text/javascript">
    function DeleteItem(id, name) {
        $("#deleteModal").modal('show');
        $("#deleteModal #YesDeleteBtn").attr("href", "/sa106d/Delete/" + id);
        $("#deleteMessage").text("Are you sure you want to delete this sa106d - " + name + " ?");
    }
</script>



@section Scripts
{
    <script src="~/Scripts/Kendoui/kendo.all.min.js"></script>
	<script src="~/Scripts/Kendoui/jszip.min.js"></script>
