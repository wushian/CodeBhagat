				<dt>
					<label>Replication Create:</label>
				</dt>
				<dd>
					@Html.Encode(Model.replication_create)
				</dd>
			
				<dt>
					<label>Replication Up Date:</label>
				</dt>
				<dd>
					@Html.Encode(Model.replication_update)
				</dd>
			
				</dl>
		</div>
		<div class="panel-footer">
			<div class="row">
				<div class="pull-left">
					<a id="btnDelete" class="btn btn-danger" onclick='DeleteItem("@Model.gkey","@Model.sa106gkey")'><span class="glyphicon glyphicon-remove"></span> Delete</a>
				</div>
				<div class="pull-right">
					<a href="@Url.Action("Edit", "sa106d", new { id=Model.gkey })" class="btn btn-primary"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
					&nbsp;
