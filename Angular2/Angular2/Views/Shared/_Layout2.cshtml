<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Angular2 Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Angular2", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Tables <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            [APP_MENU_TABLES]
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Views <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            [APP_MENU_VIEWS]
                        </ul>
                    </li>
                    <li>@Html.ActionLink("APIs", "Index", "Help")</li>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Help <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                    	<li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">Admin <b class="caret"></b></a>
	                        <ul class="dropdown-menu">
					<li>@Html.ActionLink("Manage Users", "Index", "UsersAdmin")</li>
					<li>@Html.ActionLink("Manage Roles", "Index", "RolesAdmin")</li>
				</ul>
			</li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p><span>&copy; @DateTime.Now.Year [COMPANY_NAME]. All rights reserved. | My Angular2 MVC Application </span> <span>|</span></p>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
